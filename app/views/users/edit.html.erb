<%= form_for @user do |form| %>
  
  Username: <%= form.text_field :username, placeholder: 'your username' %><br />
  
  
  Email: <%= form.email_field :email, placeholder: 'email@mail.com' %><br />
  
  
  Password: <%= form.password_field :password, placeholder: 'xxxxxxxxx' %><br />
  
  Edit: <%= form.submit "Edit" %><br />
<% end %>

